{
	"name": "canonical-cla-ui",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:mock": "vite dev --mode mock",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "bun run format && eslint . --fix",
		"check": "bun run check:svelte && bun run lint",
		"check:fix": "bun run check:svelte && bun run lint:fix",
		"check:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:svelte:watch": "bun run check:svelte -- --watch",
		"test": "vitest --run && bun run test:e2e",
		"test:e2e": "playwright test",
		"storybook": "storybook dev -p 6006 --no-open",
		"build-storybook": "storybook build",
		"openapi:update": "bun run openapi:update-schema && bun run openapi:generate-types",
		"openapi:update-schema": "bun run --env-file=.env --env-file=.env.local scripts/openapi-update-schema.ts",
		"openapi:generate-types": "openapi-typescript .api-spec/cla.json -o src/lib/api/cla/types.ts --root-types --root-types-no-schema-prefix"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^5.0.0",
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.58.0",
		"@storybook/addon-a11y": "^10.2.6",
		"@storybook/addon-docs": "^10.2.6",
		"@storybook/addon-svelte-csf": "^5.0.10",
		"@storybook/addon-vitest": "^10.2.6",
		"@storybook/sveltekit": "^10.2.6",
		"@sveltejs/adapter-node": "^5.5.2",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/bun": "^1.3.8",
		"@types/node": "^22",
		"@vitest/browser-playwright": "^4.0.18",
		"@vitest/coverage-v8": "^4.0.18",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-storybook": "^10.2.6",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.1.0",
		"openapi-typescript": "^7.10.1",
		"playwright": "^1.58.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"storybook": "^10.2.6",
		"svelte": "^5.48.2",
		"svelte-check": "^4.3.5",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.18",
		"vitest-browser-svelte": "^2.0.2"
	},
	"dependencies": {
		"openapi-fetch": "^0.15.0"
	}
}
